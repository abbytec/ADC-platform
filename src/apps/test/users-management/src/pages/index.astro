---
// Página principal de usuarios
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Usuarios</title>
    
    <!-- Import map para componentes federados -->
    <script type="importmap">
    {
        "imports": {
            "react": "https://esm.sh/react@18.3.1",
            "react-dom": "https://esm.sh/react-dom@18.3.1",
            "@ui-library/": "/ui/ui-library/"
        }
    }
    </script>
    
    <style>
        body {
            font-family: system-ui, sans-serif;
            margin: 0;
            padding: 20px;
            background: #f5f5f5;
        }
    </style>
</head>
<body>
    <div id="root"></div>

    <script type="module">
        import { createElement } from 'react';
        import { createRoot } from 'react-dom/client';
        import { Container } from '@ui-library/components/Container.js';
        import { Header } from '@ui-library/components/Header.js';
        import { PrimaryButton } from '@ui-library/components/PrimaryButton.js';

        function UsersPage() {
            return createElement(Container, null,
                createElement(Header, {
                    title: 'Gestión de Usuarios',
                    subtitle: 'Administra los usuarios de la plataforma'
                }),
                createElement('div', { style: { marginTop: '20px' } },
                    createElement('p', null, 'Lista de usuarios...'),
                    createElement(PrimaryButton, {
                        onClick: () => alert('Crear usuario')
                    }, 'Crear Nuevo Usuario')
                )
            );
        }

        const root = createRoot(document.getElementById('root'));
        root.render(createElement(UsersPage));
    </script>
</body>
</html>


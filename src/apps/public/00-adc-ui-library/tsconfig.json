{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"experimentalDecorators": true,
		"lib": ["dom", "es2021"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"target": "es2021",
		"jsx": "react",
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipLibCheck": true,
		"types": [],
		"paths": {
			"@common/*": ["../../../common/*"]
		}
	},
	"include": ["src", "utils"],
	"exclude": ["node_modules"]
}

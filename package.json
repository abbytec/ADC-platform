{
	"name": "adc-platform",
	"private": true,
	"version": "0.1.0",
	"description": "Un kernel de módulos dinámicos.",
	"type": "module",
	"workspaces": [
		"src/apps/*/*",
		"src/providers/*/*",
		"src/utilities/*/*",
		"src/services/*/*"
	],
	"scripts": {
		"start": "cross-env NODE_ENV=development tsx src/index.ts",
		"start:prod": "cross-env NODE_ENV=production EXCLUDE_TESTS=true tsx src/index.ts",
		"start:prodtests": "cross-env NODE_ENV=production EXCLUDE_TESTS=false tsx src/index.ts",
		"lint": "eslint src --ext .ts --max-warnings 0",
		"lint:fix": "eslint src --ext .ts --fix",
		"typecheck": "bash scripts/recursive-typecheck.sh && ts-prune",
		"cleanup": "bash scripts/cleanup-processes.sh",
		"create:app": "node scripts/create-app.mjs",
		"create:service": "node scripts/create-service.mjs",
		"create:utility": "node scripts/create-utility.mjs",
		"create:provider": "node scripts/create-provider.mjs"
	},
	"keywords": [
		"kernel",
		"modular",
		"plugin",
		"framework",
		"typescript"
	],
	"author": "abbytec",
	"license": "ISC",
	"dependencies": {
		"@astrojs/react": "^4.4.2",
		"@vitejs/plugin-react": "^5.1.1",
		"astro": "^5.16.4",
		"chokidar": "^5.0.0",
		"dotenv": "^17.2.3",
		"react": "^19.2.1",
		"react-dom": "^19.2.1",
		"vite": "^7.2.6",
		"vue": "^3.5.25"
	},
	"devDependencies": {
		"@module-federation/enhanced": "^0.21.6",
		"@originjs/vite-plugin-federation": "^1.4.1",
		"@rspack/cli": "^1.6.6",
		"@rspack/core": "^1.6.6",
		"@rspack/dev-server": "^1.1.4",
		"@stencil-community/postcss": "^2.2.0",
		"@stencil/core": "^4.38.3",
		"@tailwindcss/postcss": "^4.1.17",
		"@types/node": "^20.14.2",
		"@types/react": "^18.2.0",
		"@types/react-dom": "^18.2.0",
		"@vitejs/plugin-vue": "^6.0.2",
		"autoprefixer": "^10.4.22",
		"concurrently": "^9.2.1",
		"cross-env": "^10.1.0",
		"css-loader": "^7.1.2",
		"eslint": "^9.39.1",
		"postcss": "^8.5.6",
		"postcss-loader": "^8.2.0",
		"rimraf": "^6.1.2",
		"style-loader": "^4.0.0",
		"tailwindcss": "^4.1.17",
		"ts-prune": "^0.10.3",
		"tsx": "^4.21.0",
		"typescript": "^5.4.5",
		"typescript-eslint": "^8.46.3",
		"vue-loader": "^17.4.2"
	}
}

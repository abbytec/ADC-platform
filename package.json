{
	"name": "adc-platform",
	"private": true,
	"version": "0.1.0",
	"description": "Un kernel de módulos dinámicos.",
	"type": "module",
	"workspaces": [
		"src/apps/*/*",
		"src/providers/*/*",
		"src/utilities/*/*",
		"src/services/*/*"
	],
	"scripts": {
		"start": "cross-env NODE_ENV=development tsx src/index.ts",
		"start:prod": "cross-env NODE_ENV=production EXCLUDE_TESTS=true tsx src/index.ts",
		"lint": "eslint src --ext .ts --max-warnings 0",
		"lint:fix": "eslint src --ext .ts --fix",
		"cleanup": "bash scripts/cleanup-processes.sh",
		"create:app": "node scripts/create-app.mjs",
		"create:service": "node scripts/create-service.mjs",
		"create:utility": "node scripts/create-utility.mjs",
		"create:provider": "node scripts/create-provider.mjs"
	},
	"keywords": [
		"kernel",
		"modular",
		"plugin",
		"framework",
		"typescript"
	],
	"author": "abbytec",
	"license": "ISC",
	"dependencies": {
		"@astrojs/react": "^3.0.0",
		"@vitejs/plugin-react": "^4.0.0",
		"astro": "^4.0.0",
		"chokidar": "^3.6.0",
		"dotenv": "^17.2.3",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"vite": "^5.0.0"
	},
	"devDependencies": {
		"@module-federation/enhanced": "^0.21.4",
		"@originjs/vite-plugin-federation": "^1.4.1",
		"@rspack/cli": "^1.6.4",
		"@rspack/core": "^1.6.4",
		"@rspack/dev-server": "^1.1.4",
		"@types/node": "^20.14.2",
		"@types/react": "^18.2.0",
		"@types/react-dom": "^18.2.0",
		"concurrently": "^8.2.2",
		"cross-env": "^7.0.3",
		"eslint": "^9.39.1",
		"rimraf": "^5.0.7",
		"tsx": "^4.15.2",
		"typescript": "^5.4.5",
		"typescript-eslint": "^8.46.3"
	}
}
